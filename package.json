{
  "name": "aries-controller",
  "version": "1.0.74",
  "description": "Generic controller for aries agents",
  "license": "Apache-2.0",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiva/protocol-aries.git"
  },
  "keywords": [
    "kiva",
    "protocol",
    "SSI",
    "hyperledger"
  ],
  "author": "protocol-services",
  "main": "dist/main.js",
  "types": "main.d.ts",
  "files": [
    "*"
  ],
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "rm -rf dist/ && tsc && node -r dotenv/config dist/main.js",
    "start:debug": "NODE_ENV=LOCAL nodemon --legacy-watch",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node main.js",
    "start:hmr": "node server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "NODE_ENV=LOCAL node -r dotenv/config node_modules/.bin/jest --runInBand",
    "test:local": "NODE_ENV=LOCAL node -r dotenv/config node_modules/.bin/jest --runInBand -- local",
    "test:integration": "NODE_ENV=LOCAL node -r dotenv/config node_modules/.bin/jest --runInBand -- integration"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.5",
    "@nestjs/core": "^7.5.5",
    "@nestjs/platform-express": "^7.5.5",
    "@nestjs/swagger": "^4.8.0",
    "cache-manager": "^3.4.0",
    "cache-manager-fs-hash": "^0.0.9",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "crypto-js": "^4.0.0",
    "crypto-random-string": "^3.3.1",
    "jsonschema": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "protocol-common": "^0.1.46",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.5",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.5.5",
    "@types/jest": "^26.0.18",
    "@types/supertest": "^2.0.10",
    "dotenv": "^8.2.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3"
  },
  "jest": {
    "globals": {
      "factories": {}
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "implementations"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "tsc && node -r dotenv/config dist/main.js"
  }
}
